# Database Configuration
DATABASE_URL=sqlite:///data/price_tracker.db

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS=config/google_credentials.json
GOOGLE_SHEETS_ID=your_google_sheet_id_here

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Slack Notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL=#price-alerts

# Proxy Configuration (optional)
PROXY_LIST=proxy1:8080,proxy2:8080
USE_PROXY=false

# Scraping Configuration
REQUEST_DELAY_MIN=1
REQUEST_DELAY_MAX=3
MAX_RETRIES=3

# Scheduling
TRACKING_INTERVAL_HOURS=24
QUICK_CHECK_INTERVAL_HOURS=4 